@model ECinema.Web.Models.DTO.CreateTicketDto

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="ticket.MovieDate" class="control-label"></label>
                <input asp-for="ticket.MovieDate" class="form-control" />
                <span asp-validation-for="ticket.MovieDate" class="text-danger"></span>
            </div>
            
         <div class="form-group">
           <select asp-for="movieId" >
               @foreach(var item in Model.AllMovies) {
        {
        <option value="@item.Id">@item.MovieName</option>
        }
    }
           </select>
         </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
