@model ECinema.Web.Models.DomainModels.Ticket

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="movie.MovieName" class="control-label"></label>
                <input asp-for="movie.MovieName" class="form-control" />
                <span asp-validation-for="movie.MovieName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieDate" class="control-label"></label>
                <input asp-for="MovieDate" class="form-control" />
                <span asp-validation-for="MovieDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movie.Language" class="control-label"></label>
                <input asp-for="movie.Language" class="form-control" />
                <span asp-validation-for="movie.Language" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movie.Genre" class="control-label"></label>
                <select asp-for="movie.Genre" class="form-control" asp-items="@Html.GetEnumSelectList<ECinema.Web.Models.DomainModels.Enumerations.MovieGenre>()" value="@Model.movie.Genre"></select>
                <span asp-validation-for="movie.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="movie.MovieImage" class="control-label"></label>
                <input asp-for="movie.MovieImage" class="form-control" />
                <span asp-validation-for="movie.MovieImage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
